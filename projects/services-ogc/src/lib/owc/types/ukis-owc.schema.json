    "Link": {
      "title": "Link",
      "description": "The links class provides place to encode link relations in a OWS Context document.",
      "type": "object",
      "properties": {
        "href": {
          "title": "URL",
          "description": "Reference to a resource related to this one.",
          "minLength": 1,
          "maxLength": 65536,
          "format": "uri",
          "type": "string"
        },
        "type": {
          "title": "MIME-type",
          "description": "Expected MIME-type of resource pointed by the href.",
          "type": "string"
        },
        "lang": {
          "title": "ISO 639-1 language code",
          "description": "Expected language of resource pointed by the href.",
