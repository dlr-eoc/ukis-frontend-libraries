        "authors": {
          "title": "Author",
          "description": "Entity primarily responsible for making the Context document.",
          "type": "array",
          "items": {
            "$ref": "#/definitions/Author"
          }
        },
        "publisher": {
          "title": "Publisher",
          "description": "Identifier for the publisher of the Context document.",
          "type": "string"
        },
        "generator": {
          "title": "Application",
          "description": "Tool/application used to create the Context document and its properties",
          "allOf": [
            {
              "$ref": "#/definitions/CreatorApplication"
            }
          ]
        },
        "display": {
          "title": "Display",
          "description": "Information related to the display area used in the creator application.",
          "allOf": [
            {
              "$ref": "#/definitions/CreatorDisplay"
            }
          ]
        },
        "rights": {
          "title": "Information about rights held in and over the Context document",
          "description": "Contains information about rights held in and over the Context document.  Please note that this element SHALL NOT be used to convey machine readable licensing information.",
          "type": "string"
        },
        "categories": {
          "title": "Keywords",
          "description": "Categories related to this document.",
          "type": "array",
          "items": {
            "$ref": "#/definitions/Category"
          }
        },
        "date": {
          "title": "Temporal extend",
          "description": "Date or range of dates relevant to the Context document.",
          "type": "string"
        }
      },
      "required": [
        "title",
        "lang",
        "updated"
      ]
    },
