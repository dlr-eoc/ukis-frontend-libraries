      "title": "Context",
      "description": "This class is the overall container class for the context document.",
      "type": "object",
      "properties": {
        "title": {
          "title": "Title.",
          "description": "Title for the Context document.",
          "type": "string"
        },
        "lang": {
          "title": "ISO 639-1 language code",
