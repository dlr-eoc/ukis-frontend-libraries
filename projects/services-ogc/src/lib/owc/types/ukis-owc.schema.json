      "properties": {
        "pixelWidth": {
          "title": "Width in pixels",
          "description": "Width measured in pixels of the display showing the Area of Interest.",
          "minimum": 0,
          "type": "integer"
        },
        "pixelHeight": {
          "title": "Height in pixels",
          "description": "Height measured in pixels of the display showing the Area of Interest.",
          "minimum": 0,
          "type": "integer"
        },
        "mmPerPixel": {
          "title": "Size of Pixel",
          "description": "The size of a pixel of the display in millimeters (combined with the previous ones allows for the real display size to be calculated).",
          "minimum": 0,
          "type": "number"
        }
      }
    },
