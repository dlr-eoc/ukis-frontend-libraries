              "$ref": "#/definitions/LangCode"
            }
          ]
        },
        "updated": {
          "title": "Creation or update Date",
          "description": "Date of the last update of the Context document.",
          "type": "string",
          "format": "date-time"
        },
        "links": {
          "title": "Title.",
          "description": "Title for the Context document.",
          "default": {
            "profiles": [
              {
                "href": "http://www.opengis.net/spec/owcgeojson/1.0/req/core",
                "type": null,
                "lang": null,
                "title": null,
                "length": null
              }
            ],
            "via": null
          },
          "allOf": [
            {
              "$ref": "#/definitions/ContextLinks"
            }
          ]
        },
        "subtitle": {
          "title": "Abstract",
          "description": "Description of the Context document purpose or content.",
          "type": "string"
